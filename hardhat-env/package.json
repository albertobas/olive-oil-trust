{
  "name": "hardhat-env",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "hardhat test --network hardhat",
    "node": "hardhat node --hostname 0.0.0.0",
    "clean": "hardhat clean --global",
    "compile": "hardhat compile",
    "share": "hardhat run scripts/share.ts",
    "deploy": "hardhat run scripts/deploy.ts --network localhost",
    "size-contracts": "hardhat size-contracts",
    "coverage": "hardhat coverage --temp artifacts --testfiles \"test/**/*.ts\"",
    "tsc": "tsc --pretty --noEmit",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint . --ext .ts",
    "lint": "npm run lint:sol && npm run lint:ts",
    "setState": "hardhat setState --network localhost"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.7",
    "globby": "^11.0.4",
    "hardhat": "^2.9.6",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.7.4"
  }
}
