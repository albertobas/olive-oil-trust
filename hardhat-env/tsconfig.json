{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "ESNext"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@test/*": ["./test/*"],
      "@types": ["./types/index"]
    }
  },
  "exclude": ["**/node_modules"],
  "include": ["./test/**/*", "./scripts/**/*", "./tasks/**/*", "helpers/**/*"],
  "files": ["./hardhat.config.ts"]
}
