{
  "name": "olive-oil-trust",
  "version": "1.0.0",
  "description": "Olive Oil Trust is an olive oil traceability solution built on Ethereum",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "lint": "pnpm run hardhat:lint && pnpm run subgraph:lint && pnpm run next-app:lint",
    "prepare": "husky install",
    "hardhat:node": "pnpm --filter hardhat-env run node",
    "hardhat:compile": "pnpm --filter hardhat-env run compile",
    "hardhat:test": "pnpm --filter hardhat-env run test",
    "hardhat:clean": "pnpm --filter hardhat-env run clean",
    "hardhat:coverage": "pnpm --filter hardhat-env run coverage",
    "hardhat:deploy": "pnpm --filter hardhat-env run deploy",
    "hardhat:share": "pnpm --filter hardhat-env run share",
    "hardhat:size-contracts": "pnpm --filter hardhat-env run size-contracts",
    "hardhat:lint": "pnpm --filter hardhat-env run lint",
    "hardhat:lint:sol": "pnpm --filter hardhat-env run lint:sol",
    "hardhat:lint:ts": "pnpm --filter hardhat-env run lint:ts",
    "hardhat:tsc": "pnpm --filter hardhat-env run tsc",
    "hardhat:set-state": "pnpm --filter hardhat-env run set-state",
    "subgraph:codegen": "pnpm --filter subgraph run codegen",
    "subgraph:create": "pnpm --filter subgraph run create",
    "subgraph:lint": "pnpm --filter subgraph run lint",
    "subgraph:remove": "pnpm --filter subgraph run remove",
    "subgraph:deploy": "pnpm --filter subgraph run deploy",
    "subgraph:build": "pnpm --filter subgraph run build",
    "next-app:codegen": "pnpm --filter next-app run codegen",
    "next-app:build": "pnpm --filter next-app run build",
    "next-app:dev": "pnpm --filter next-app run dev",
    "next-app:start": "pnpm --filter next-app run start",
    "next-app:lint": "pnpm --filter next-app run lint",
    "next-app:tsc": "pnpm --filter next-app run tsc",
    "graph-node:clean": "pnpm --filter graph-node run clean",
    "graph-node:start": "pnpm run graph-node:clean && docker compose -f docker-compose.yml up",
    "setup": "pnpm run hardhat:deploy && pnpm run hardhat:share && pnpm run subgraph:codegen && pnpm run subgraph:create && pnpm run subgraph:deploy && pnpm run next-app:codegen ",
    "setup:set-state": "pnpm run setup && pnpm run hardhat:set-state"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertobas/olive-oil-trust.git"
  },
  "keywords": [],
  "author": {
    "name": "Alberto Bas",
    "url": "https://github.com/albertobas"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/albertobas/olive-oil-trust/issues"
  },
  "homepage": "https://github.com/albertobas/olive-oil-trust#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^3.7.4",
    "prettier-plugin-solidity": "^2.2.1"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
